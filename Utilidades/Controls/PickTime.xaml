<UserControl x:Class="Utilidades.PickTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:Utilidades"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="pickTime"
             >

    <Grid>
        <Button Grid.RowSpan="1" Style="{DynamicResource PickTimeButtonOpen}" DataContext="{Binding ElementName=pickTime}" Click="OpenPopup_Click"/>
        <Popup x:Name="Popup_Picker" AllowsTransparency="True" Placement="Center" HorizontalAlignment="Center" IsOpen="False" VerticalAlignment="Center">
            <Grid MaxHeight="240" MinWidth="150" Grid.RowSpan="3">

                <Border CornerRadius="5" Background="{StaticResource BackgroundPopup}" Grid.RowSpan="2">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" DataContext="{Binding ElementName=pickTime, Path=PickTimeSp}">

                            <view:SelectElement DataContext="{Binding ListaD}" Lista="{Binding Lista}" NameLista="{Binding NameLista}" Visibility="{Binding Visible}" SelectIndex="{Binding IndexSelect}" Width="50" MaxItem="7" PositionSelect="4"/>
                            <view:SelectElement DataContext="{Binding ListaH}" Lista="{Binding Lista}" NameLista="{Binding NameLista}" Visibility="{Binding Visible}" SelectIndex="{Binding IndexSelect}" Width="50" MaxItem="7" PositionSelect="4"/>
                            <view:SelectElement DataContext="{Binding ListaM}" Lista="{Binding Lista}" NameLista="{Binding NameLista}" Visibility="{Binding Visible}" SelectIndex="{Binding IndexSelect}" Width="50" MaxItem="7" PositionSelect="4"/>
                            <view:SelectElement DataContext="{Binding ListaS}" Lista="{Binding Lista}" NameLista="{Binding NameLista}" Visibility="{Binding Visible}" SelectIndex="{Binding IndexSelect}" Width="50" MaxItem="7" PositionSelect="4"/>

                        </StackPanel>
                        <Grid Grid.Row="1" Height="30" VerticalAlignment="Top" DataContext="{Binding ElementName=pickTime}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="2" Click="ButtonClosePop" Style="{DynamicResource PickTImeButtonClose}" />
                            <Button Grid.Column="1" Click="ButtonListoPop" Style="{DynamicResource PickTImeButtonOk}" />
                            <Button Grid.Column="0" Click="ButtonNowPop" Style="{DynamicResource PickTImeButtonNow}" />

                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Popup>
    </Grid>
</UserControl>
