<ResourceDictionary 
    x:Class="Utilidades.Style.StyleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:System.Windows.Media;assembly=PresentationCore"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    
    xmlns:Controls="clr-namespace:Utilidades.Controls">

    <SolidColorBrush x:Key="ColorIconEntre" Color="White" />
    <SolidColorBrush x:Key="ColorIconLeave" Color="Black" />
    <SolidColorBrush x:Key="BackgroundIcon" Color="Transparent" />

    <SolidColorBrush x:Key="BackgroundPopup" Color="Black" />

    <SolidColorBrush x:Key="ForegroundSelect" Color="White" />


    <SolidColorBrush x:Key="TextBoxPlus_Background">#29363F</SolidColorBrush>
    <SolidColorBrush x:Key="TextBoxPlus_BorderColor">#6ED9A1</SolidColorBrush>
    <SolidColorBrush x:Key="TextBoxPlus_FocusedBorderColor">#DC8789</SolidColorBrush>
    <Color x:Key="CTextBoxPlus_BorderColor">#6ED9A1</Color>
    <Color x:Key="CTextBoxPlus_FocusedBorderColor">#DC8789</Color>
    <Color x:Key="CTextBoxPlus_PlaceholderForeground">#ADB0B2</Color>
    <Color x:Key="CTextBoxPlus_FocusedPlaceholderForeground">#808080</Color>

    <Style x:Key="TextBoxPlusStyle1" TargetType="{x:Type Controls:TextBoxPlus}">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="PlaceholderForeground" Value="#ADB0B2"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:TextBoxPlus}">
                    <Border x:Name="BorderControl" 
                        CornerRadius="5" 
                        Background="{StaticResource TextBoxPlus_Background}" 
                        BorderBrush="{StaticResource TextBoxPlus_BorderColor}" 
                        BorderThickness="2" 
                        Padding="5,0,0,0">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Cuando IsFocusedBox es True, animamos el color del borde -->
                        <Trigger Property="IsFocusedBox" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderControl" Storyboard.TargetProperty="BorderBrush.Color" To="{StaticResource CTextBoxPlus_FocusedBorderColor}"  Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetProperty="PlaceholderForeground.Color" To="{StaticResource CTextBoxPlus_FocusedPlaceholderForeground}"  Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderControl" Storyboard.TargetProperty="BorderBrush.Color" To="{StaticResource CTextBoxPlus_BorderColor}" Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetProperty="PlaceholderForeground.Color" To="{StaticResource CTextBoxPlus_PlaceholderForeground}"  Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <SolidColorBrush x:Key="ForegroundNotSelect" Color="#A4A2AD" />
    <SolidColorBrush x:Key="ForegroundTitle" Color="White" />
    <SolidColorBrush x:Key="ColorSeparator" Color="White" />

    <SolidColorBrush x:Key="ButtonsBackground" Color="#050000" />
    <SolidColorBrush x:Key="ButtonsShadow" Color="White" />
    <SolidColorBrush x:Key="ButtonsOn" Color="#248CFF" />
    <SolidColorBrush x:Key="ButtonsOff" Color="White" />

    <Style TargetType="{x:Type Button}" x:Key="PickTimeButtonOpen">
        <EventSetter Event="MouseEnter" Handler="buttonEntrada"/>
        <EventSetter Event="MouseLeave" Handler="buttonSalida"/>
        <Setter Property="Padding" Value="7"/>
        <Setter Property="Background" Value="{StaticResource ColorIconEntre}"/>
        <Setter Property="Foreground" Value="{StaticResource ColorIconLeave}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid Background="{StaticResource BackgroundIcon}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                        <Path Fill="{TemplateBinding Background}" x:Name="myPath" Margin="7" HorizontalAlignment="Center" VerticalAlignment="Center" StrokeThickness="0" Stretch="Fill" Data="M16,29A13,13,0,1,1,29,16,13,13,0,0,1,16,29ZM16,5A11,11,0,1,0,27,16,11,11,0,0,0,16,5ZM21.5,22.5a1,1,0,0,1-.71-.29l-5.5-5.5A1,1,0,0,1,15,16V8a1,1,0,0,1,2,0v7.59l5.21,5.2a1,1,0,0,1,0,1.42A1,1,0,0,1,21.5,22.5Z"  />
                    </Grid>
                    <ControlTemplate.Triggers>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="PickTImeButtonClose">
        <Setter Property="BorderBrush" Value="{StaticResource ButtonsShadow}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="10"  Margin="5,2" Background="{StaticResource ButtonsBackground}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Color="{TemplateBinding BorderBrush}" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid Background="Transparent">
                            <Path x:Name="pth" Data="M 20,10 L 10,20 M 20,20 L 10,10" Stroke="{StaticResource ButtonsOff}" StrokeThickness="3" Stretch="Uniform" Width="16" Height="16" StrokeLineJoin="Round" Margin="2,0,0,0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Stroke" TargetName="pth" Value="{StaticResource ButtonsOn}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="PickTImeButtonOk">
        <Setter Property="BorderBrush" Value="{StaticResource ButtonsShadow}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="10"  Margin="5,2" Background="{StaticResource ButtonsBackground}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Color="{TemplateBinding BorderBrush}" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid Background="Transparent">
                            <Path x:Name="pth" Margin="2,0,0,0" Fill="{StaticResource ButtonsOff}" Stretch="Uniform" Height="20" Width="20" VerticalAlignment="Center" HorizontalAlignment="Center" Data="M9.0000012,17.130126 L4.7304686,12.860595 C4.3417981,12.471924 3.7089844,12.471924 3.320313,12.860595 L1.2695313,14.911377 C0.8808594,15.300048 0.8808594,15.933105 1.2695313,16.321777 L7.5507812,22.602783 C7.9394526,22.991455 8.5722663,22.991455 8.9609375,22.602783 L21.727545,9.8361816 C22.116217,9.44751 22.116217,8.8144533 21.727545,8.4257813 L19.676765,6.375 L9.0000012,17.130126 z"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Fill" TargetName="pth" Value="{StaticResource ButtonsOn}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="PickTImeButtonNow">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="BorderBrush" Value="{StaticResource ButtonsShadow}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="10"  Margin="5,2" Background="{StaticResource ButtonsBackground}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Color="{TemplateBinding BorderBrush}" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <Grid Background="Transparent">
                            <Path x:Name="pth" Fill="{StaticResource ButtonsOff}" Width="18" Height="18" Margin="0,0,0,0" Stretch="Uniform" Data="M15.5,1 C22.9558455,1 29,7.0441545 29,14.5 C29,21.9558455 22.9558455,28 15.5,28 C8.0441545,28 2,21.9558455 2,14.5 C2,7.0441545 8.0441545,1 15.5,1 Z M15.5,3 C9.7010101,3 5,7.7010101 5,13.5 C5,19.2989899 9.7010101,24 15.5,24 C21.2989899,24 26,19.2989899 26,13.5 C26,7.7010101 21.2989899,3 15.5,3 Z M16.5,14.5 L10.5,14.5 L10.5,13.5 L15.5,8.5 L16.5,8.5 L16.5,14.5 Z" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Fill" TargetName="pth" Value="{StaticResource ButtonsOn}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="PickTimeElementos">
        <Setter Property="Foreground" Value="{StaticResource ForegroundNotSelect}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="Transparent" BorderThickness="0">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <DataTrigger Binding="{Binding Position}" Value="0">
                <Setter Property="Foreground" Value="{StaticResource ForegroundSelect}"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Margin" Value="0,10"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <StackPanel>
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>